#!/bin/bash

STOPTIMEOUT=10
FMT="%a %b %d %Y %H:%M:%S GMT%z (%Z)"

OPENSHIFT_NGINX_DIR=${OPENSHIFT_NGINX_DIR:-OPENSHIFT_REPO_DIR}

function is_nginx_service_running() {
    if [ -f $OPENSHIFT_NGINX_DIR/pid/nginx.pid ]; then
        nginx_pid=$( cat $OPENSHIFT_NGINX_DIR/pid/nginx.pid 2> /dev/null )
        if `ps --pid $nginx_pid 2>&1`; then
            return 0
        fi
    fi

    return 1
}

function status() {
    if [ is_nginx_service_running ]; then
        client_result "Application is running"
    else
        client_result "Application is not running"
    fi
}


function start() {
    logf="$OPENSHIFT_NGINX_DIR/logs/nginx.log"
    pushd "$OPENSHIFT_REPO_DIR" > /dev/null
    {
        nginx_dir=$(cat .nginx_dir)
        package=$(basename $nginx_dir)

        if [ -f "bin/$package" ]; then
            echo "`date +"$FMT"`: Starting application '$OPENSHIFT_APP_NAME' from bin/$package..."

            nohup "bin/$package" >> $logf 2>&1 &

            ret=$?
            npid=$!
            if [ $ret -eq 0 ]; then
                echo "$npid" > "$OPENSHIFT_NGINX_DIR/pid/nginx.pid"
            else
                echo "Application '$OPENSHIFT_APP_NAME' failed to start - $ret" 1>&2
                exit $ret
            fi
        else
            echo "WARN: Could not find the compiled application bin/$package, will not start"
        fi
    } >> $logf
}

function stop() {
    if [ -f $OPENSHIFT_NGINX_DIR/pid/nginx.pid ]; then
        nginx_pid=$( cat $OPENSHIFT_NGINX_DIR/pid/nginx.pid 2> /dev/null )
    fi

    if [ -n "$nginx_pid" ]; then
        logf="$OPENSHIFT_NGINX_DIR/logs/nginx.log"
        echo "`date +"$FMT"`: Stopping application '$OPENSHIFT_APP_NAME' ..." >> $logf
        /bin/kill $nginx_pid
        ret=$?
        if [ $ret -eq 0 ]; then
            TIMEOUT="$STOPTIMEOUT"
            while [ $TIMEOUT -gt 0 ] && is_nginx_service_running ; do
                /bin/kill -0 "$nginx_pid" >/dev/null 2>&1 || break
                sleep 1
                let TIMEOUT=${TIMEOUT}-1
            done
        fi

        echo "`date +"$FMT"`: Stopped Nginx application '$OPENSHIFT_APP_NAME'" >> $logf
        rm -f $OPENSHIFT_NGINX_DIR/pid/nginx.pid
    else
        echo "Warning: Application '$OPENSHIFT_APP_NAME' server exists without a pid file.  Use force-stop to kill." 1>&2
    fi
}

function restart() {
    stop
    start
}

function build() {
    ${OPENSHIFT_NGINX_DIR}/bin/compile ${OPENSHIFT_NGINX_DIR} ${OPENSHIFT_NGINX_DIR}/build_cache
}

function post-deploy() {
    echo
}

function pre-build() {
    echo
}

function tidy() {
  client_message "Emptying log dir: $OPENSHIFT_NGINX_DIR/logs"
  shopt -s dotglob
  rm -rf $OPENSHIFT_NGINX_DIR/logs/*
  rm -rf $OPENSHIFT_NGINX_DIR/tmp/*
}

#
#  main():
#

# Ensure arguments.
if ! [ $# -eq 1 ]; then
    echo "Usage: $0 [start|restart|graceful|graceful-stop|stop|status]"
    exit 1
fi

# Source utility functions.
source $OPENSHIFT_CARTRIDGE_SDK_BASH

# Handle commands.
case "$1" in
    start)               start       ;;
    restart|graceful)    restart     ;;
    graceful-stop|stop)  stop        ;;
    status)              status      ;;
    build)               build       ;;
    pre-build)           pre-build   ;;
    post-deploy)         post-deploy ;;
    tidy)                tidy        ;;
    *) exit 0;
esac

